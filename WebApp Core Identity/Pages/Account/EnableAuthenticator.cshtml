@page
@model WebApp_Core_Identity.Pages.Account.EnableAuthenticatorModel
@{
    ViewData["Title"] = "Enable Authenticator App";
}

<h2>Enable Authenticator App</h2>

<p>Scan the QR code below with Microsoft Authenticator (or another TOTP app) or enter the key manually.</p>

@if (!string.IsNullOrEmpty(Model.AuthenticatorUri))
{
    <div class="mb-3">
        <img src="https://chart.googleapis.com/chart?cht=qr&chs=200x200&chl=@System.Net.WebUtility.UrlEncode(Model.AuthenticatorUri)" alt="QR code" />
    </div>
}

@if (!string.IsNullOrEmpty(Model.SharedKey))
{
    <p><strong>Secret key:</strong> <code>@Model.SharedKey</code></p>
}

<form method="post" class="mt-3">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label class="form-label">Verification code</label>
        <input asp-for="Code" class="form-control" autocomplete="one-time-code" />
        <small class="form-text text-muted">Enter the 6-digit code from your authenticator app to finish setup.</small>
    </div>

    <button type="submit" class="btn btn-primary">Verify and enable</button>
</form>
