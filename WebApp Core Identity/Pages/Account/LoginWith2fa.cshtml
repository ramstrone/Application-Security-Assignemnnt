@page
@model WebApp_Core_Identity.Pages.Account.LoginWith2faModel
@{
    ViewData["Title"] = "Two-factor authentication";
}

<h2>Two-factor authentication</h2>

<form method="post" class="mt-3">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

    <div class="mb-3">
        <label class="form-label">Authentication code</label>
        <input asp-for="TwoFactorCode" class="form-control" autocomplete="one-time-code" />
        <small class="form-text text-muted">Enter the code from your authenticator app or a recovery code.</small>
    </div>

    <div class="mb-3 form-check">
        <input asp-for="RememberMachine" class="form-check-input" />
        <label asp-for="RememberMachine" class="form-check-label">Remember this device</label>
    </div>

    <input type="hidden" asp-for="RememberMe" />

    <button type="submit" class="btn btn-primary">Verify</button>
</form>
